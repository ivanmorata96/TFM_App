<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/introView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="These are your stats"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/userMoviesView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/introView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/userTVShowsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/userMoviesView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/userVideogameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/userTVShowsView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/userBooksView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/userVideogameView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/ongoingDropdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="On-going"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@android:color/holo_green_light"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/userBooksView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ongoingRV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/ongoingDropdown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/backlogDropdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Backlog"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@android:color/holo_green_light"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/ongoingRV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/backlogRV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/backlogDropdown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/completedDropdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@android:color/holo_green_light"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/backlogRV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/completedRV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/completedDropdown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>